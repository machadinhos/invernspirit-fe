{
  "name": "invernspirit-fe",
  "description": "The frontend for the InvernSpirit e-commerce website (https://www.invernspirit.com), built with SvelteKit.",
  "private": true,
  "repository": "https://github.com/machadinhos/invernspirit-fe.git",
  "type": "module",
  "packageManager": "bun@^1.2.15",
  "scripts": {
    "dev": "vite dev",
    "local": "bunx wrangler pages dev functions --show-interactive-dev-session=false --port=9000 --compatibility-date=2025-02-15",
    "dev:local": "concurrently --kill-others-on-fail --names \"dev,local\" --prefix-colors \"red,blue\" \"bun run dev\" \"bun run local\"",
    "build": "vite build",
    "preview": "vite preview --port 5173",
    "build:preview": "vite build && bun run preview",
    "preview:local": "concurrently --kill-others-on-fail --names \"preview,local\" --prefix-colors \"red,blue\" \"bun run preview\" \"bun run local\"",
    "build:preview:local": "bun run build && bun run preview:local",
    "check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
    "check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
    "lint": "eslint --fix",
    "format": "prettier --write --list-different",
    "format:lint": "prettier --write --list-different . && eslint . --fix",
    "a11y-audit": "bun scripts/run-a11y-audit.ts",
    "generate-sitemap": "bun scripts/generate-sitemap.ts",
    "prepare": "(svelte-kit sync || echo '') ; (husky || echo '')"
  },
  "dependencies": {
    "@axe-core/puppeteer": "^4.10.2",
    "@sveltejs/adapter-static": "^3.0.8",
    "@sveltejs/kit": "^2.21.4",
    "@sveltejs/vite-plugin-svelte": "^5.1.0",
    "@tailwindcss/vite": "^4.1.8",
    "dompurify": "^3.2.6",
    "embla-carousel-svelte": "^8.6.0",
    "puppeteer": "^24.10.0",
    "svelte": "^5.33.19",
    "svelte-icons-pack": "^3.1.3",
    "tailwindcss": "^4.1.8",
    "vite": "^6.3.5",
    "vite-plugin-devtools-json": "^0.2.0"
  },
  "devDependencies": {
    "@cloudflare/workers-types": "^4.20250610.0",
    "@eslint/compat": "^1.2.9",
    "@eslint/js": "^9.28.0",
    "@types/bun": "^1.2.15",
    "@types/cloudflare-turnstile": "^0.2.2",
    "concurrently": "^9.1.2",
    "eslint": "^9.28.0",
    "eslint-config-prettier": "^10.1.5",
    "eslint-plugin-import": "^2.31.0",
    "eslint-plugin-svelte": "^3.9.2",
    "globals": "^16.2.0",
    "husky": "^9.1.7",
    "ignore": "^7.0.5",
    "prettier": "^3.5.3",
    "prettier-plugin-svelte": "^3.4.0",
    "prettier-plugin-tailwindcss": "^0.6.12",
    "svelte-check": "^4.2.1",
    "typescript": "^5.8.3",
    "typescript-eslint": "^8.34.0"
  }
}
