{
  "name": "invernspirit-fe",
  "description": "The frontend for the InvernSpirit e-commerce website (https://www.invernspirit.com), built with SvelteKit.",
  "private": true,
  "repository": "https://github.com/machadinhos/invernspirit-fe.git",
  "type": "module",
  "packageManager": "bun@1.2.19",
  "scripts": {
    "dev": "vite dev",
    "local": "bunx wrangler pages dev functions --show-interactive-dev-session=false --port=9000 --compatibility-date=2025-02-15",
    "dev:local": "concurrently --kill-others-on-fail --names \"dev,local\" --prefix-colors \"red,blue\" \"bun run dev\" \"bun run local\"",
    "build": "vite build",
    "preview": "vite preview --port 5173",
    "build:preview": "vite build && bun run preview",
    "preview:local": "concurrently --kill-others-on-fail --names \"preview,local\" --prefix-colors \"red,blue\" \"bun run preview\" \"bun run local\"",
    "build:preview:local": "bun run build && bun run preview:local",
    "check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
    "check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
    "lint": "eslint --concurrency=auto --fix",
    "lint:no-fix": "eslint --concurrency=auto",
    "format": "prettier --write --list-different",
    "format:lint": "prettier --write --list-different . && eslint --concurrency=auto --fix .",
    "a11y-audit": "bun scripts/run-a11y-audit.ts",
    "generate-sitemap": "bun scripts/generate-sitemap.ts",
    "prepare": "(svelte-kit sync || echo '') ; (husky || echo '')"
  },
  "dependencies": {
    "@sveltejs/adapter-static": "^3.0.9",
    "@sveltejs/kit": "^2.38.1",
    "@sveltejs/vite-plugin-svelte": "^6.2.0",
    "@tailwindcss/vite": "^4.1.13",
    "dompurify": "^3.2.6",
    "embla-carousel-svelte": "^8.6.0",
    "svelte": "^5.38.9",
    "tailwindcss": "^4.1.13",
    "vite": "^7.1.5",
    "vite-plugin-devtools-json": "^1.0.0"
  },
  "devDependencies": {
    "@axe-core/puppeteer": "^4.10.2",
    "@cloudflare/workers-types": "^4.20250911.0",
    "@eslint/compat": "^1.3.2",
    "@eslint/js": "^9.35.0",
    "@types/bun": "^1.2.21",
    "@types/cloudflare-turnstile": "^0.2.2",
    "@types/gtag.js": "^0.0.20",
    "concurrently": "^9.2.1",
    "eslint": "^9.35.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-import": "^2.32.0",
    "eslint-plugin-svelte": "^3.12.3",
    "globals": "^16.4.0",
    "husky": "^9.1.7",
    "ignore": "^7.0.5",
    "prettier": "^3.6.2",
    "prettier-plugin-svelte": "^3.4.0",
    "prettier-plugin-tailwindcss": "^0.6.14",
    "puppeteer": "^24.20.0",
    "svelte-check": "^4.3.1",
    "typescript": "^5.9.2",
    "typescript-eslint": "^8.43.0"
  }
}
