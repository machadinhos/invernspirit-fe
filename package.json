{
  "name": "invernspirit-fe",
  "description": "The frontend for the InvernSpirit e-commerce website (https://www.invernspirit.com), built with SvelteKit.",
  "private": true,
  "repository": "https://github.com/machadinhos/invernspirit-fe-remake.git",
  "type": "module",
  "packageManager": "bun@^1.2.8",
  "scripts": {
    "dev": "vite dev",
    "build": "vite build",
    "build:preview": "vite build && vite preview --port 5173",
    "preview": "vite preview --port 5173",
    "local": "bunx wrangler pages dev functions --show-interactive-dev-session=false --port=9000 --compatibility-date=2025-02-15",
    "check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
    "check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
    "lint": "eslint --fix",
    "format": "prettier --write --list-different",
    "format:lint": "prettier --write --list-different . && eslint . --fix",
    "a11y-audit": "bun scripts/run-a11y-audit.ts",
    "generate-sitemap": "bun scripts/generate-sitemap.ts",
    "prepare": "(svelte-kit sync || echo '') ; (husky || echo '')"
  },
  "dependencies": {
    "@axe-core/puppeteer": "^4.10.1",
    "@sveltejs/adapter-static": "^3.0.8",
    "@sveltejs/kit": "^2.20.7",
    "@sveltejs/vite-plugin-svelte": "^5.0.3",
    "@tailwindcss/postcss": "^4.1.4",
    "@tailwindcss/vite": "^4.1.4",
    "@types/bun": "^1.2.11",
    "dompurify": "^3.2.5",
    "embla-carousel-svelte": "^8.6.0",
    "puppeteer": "^24.7.2",
    "svelte": "^5.28.2",
    "svelte-icons-pack": "^3.1.3",
    "tailwindcss": "^4.1.4",
    "vite": "^6.3.3"
  },
  "devDependencies": {
    "@cloudflare/workers-types": "^4.20250429.0",
    "@types/cloudflare-turnstile": "^0.2.2",
    "@types/eslint": "^9.6.1",
    "eslint": "^9.25.1",
    "eslint-config-prettier": "^10.1.2",
    "eslint-plugin-import": "^2.31.0",
    "eslint-plugin-svelte": "^3.5.1",
    "globals": "^16.0.0",
    "husky": "^9.1.7",
    "ignore": "^7.0.4",
    "prettier": "^3.5.3",
    "prettier-plugin-svelte": "^3.3.3",
    "prettier-plugin-tailwindcss": "^0.6.11",
    "svelte-check": "^4.1.6",
    "typescript": "^5.8.3",
    "typescript-eslint": "^8.31.1"
  }
}
